{
  "name": "@ubmedia/isg-checkbox",
  "version": "0.0.1",
  "main": "dist/ubmisg.isg-checkbox.umd.js",
  "module": "dist/ubmisg.isg-checkbox.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:css && tsup src/index.tsx --format esm,cjs --dts --out-dir dist",
    "build:css": "tailwindcss -m -i ../../tailwind-entry.css -o ./dist/styles.css --config ../../../tailwind.config.js",
    "test": "vitest run",
    "lint": "eslint src --ext .tsx"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "style": "./dist/styles.css",
      "import": "./dist/ubmisg.isg-checkbox.es.js",
      "require": "./dist/ubmisg.isg-checkbox.umd.js"
    },
    "./styles.css": "./dist/styles.css"
  }
}
